<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="400" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2B2B2B"
        Icon="images/well.png"
        >




    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/images/well.png" Stretch="Fill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition>

            </ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#313131"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Rectangle Grid.Column="11" Grid.RowSpan="1000">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#212121" Offset="0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Grid.Column="10" Grid.RowSpan="1000">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#212121" Offset="0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>




            <Button x:Name="MinimizeButton"    Content="-"
                       Foreground="#D3D3D3"
                       Background="{x:Null}"
                       BorderBrush="{x:Null}"
                       Grid.Column="10"
                       VerticalAlignment="Center"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular" Margin="12,4,12,3" Width="51" Click="MinimizeButton_Click"
                       />
            <Button x:Name="ExitProgramm"    Content="X"
                       Foreground="#D3D3D3"
                       Background="{x:Null}"
                       BorderBrush="{x:Null}"
                       Grid.Column="11"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular" Margin="27,3,7,4" Width="41" Click="ExitProgramm_Click"
                       />
           

        </Grid>

        

            <!--  this is not a good place for text block.
          the text block is beneath the rectangle  
          so it would not be seen  -->
            <!--<TextBlock Grid.Column="1"  Text="Some Text"/>-->

            

     







        <!-- small adjustment to pic with margin-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,394,0">
            <Grid.Background>
                <!-- BackgroundImageBlightCut-->
                <ImageBrush ImageSource="/images/backgroundnew.png" Stretch="UniformToFill"></ImageBrush>
            </Grid.Background>
            <StackPanel Grid.Row="2"
                VerticalAlignment="Center"
                        Margin="50,0,50,0">
                <StackPanel>
                    <TextBlock
                        Foreground="white"
                        FontSize="35"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Poppins"
                    ><Span Foreground="#FFF3F3F3"><Run Text="The Largest"/></Span><LineBreak/><Span Foreground="#FFF3F3F3"><Run Text="Community"/></Span><LineBreak/><Span Foreground="#FFF3F3F3"><Run Text="Statistics DB"/></Span></TextBlock>

                    <TextBlock
                        Foreground="white"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Roboto Medium"
                        Margin="0,10,0,0"
                    ><Run Foreground="#FFD8C389" FontSize="12" Text="SOFTWARE IS UP TO "/><Run Foreground="#FFD8C389" Text="DATE"/></TextBlock>


                    <TextBlock
                        Foreground="white"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Roboto"
                        TextWrapping="Wrap"
                        Margin="0,10,0,0"
                    ><Span Foreground="#FF9F9F9F"><Run Text="Statistics collector made for the game &quot;Dead by Daylight&quot;.  Uploading end screen images allows the processor to automatically read all necessary information in order to save every perks, addons and items used into a database for further analysis."/></Span></TextBlock>
                    <TextBlock x:Name="ErrorBox" Text=""
                        Foreground="#E84225"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="fonts/#Roboto-Regular"
                        TextWrapping="Wrap"
                        Margin="0,20,0,0"
                    />

                </StackPanel>


            </StackPanel>
        </Grid>





        <Grid Grid.Column="1"
              Grid.RowSpan="2"
              Margin="0,26,0,0">

            <StackPanel>
                <TextBlock
                Margin="0,0,0,0"
                Foreground="#D8C389"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="Username or Email"/>
                <TextBox x:Name="emailorusername" Margin="141,10,144,0" Height="21"
                         Background="#1B1B1B"
                         Foreground="White"
                         />



                <TextBlock
                Margin="0,30,0,0"
                Foreground="#D8C389"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                
                TextAlignment="Center"
                Text="Password"/>
                <PasswordBox  x:Name="password" Height="21" Margin="141,10,144,0"
                             Background="#1B1B1B"
                             Foreground="White"
                             />
                <Button IsDefault="True" Content="Sign In" Margin="140,50" VerticalAlignment="Top" Width="169" Click="Button_Click" Background="#FF93855B" Foreground="White" Height="42" FontSize="20" FontWeight="Bold"/>

            </StackPanel>

        </Grid>

    </Grid>
</Window>
