<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="470" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#000206"
        Icon="images/well.png"
        
        >


    <Window.Resources>


        <!--- Textbox outline -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#858585"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#858585"/>
                                <Setter Property="BorderThickness" TargetName="border" Value="2"/>
                                <Setter Property="Margin" TargetName="border" Value="0,-0.5,0,-0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--- PasswordBox outline -->
        <Style TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#858585"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#858585"/>
                                <Setter Property="BorderThickness" TargetName="border" Value="2"/>
                                <Setter Property="Margin" TargetName="border" Value="0,-0.5,0,-0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--- SIGN IN Button  -->
        <LinearGradientBrush x:Key="SignInBackground1" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#776A42" Offset="0"/>
            <GradientStop Color="#BDAD81" Offset="0.53"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SignInBackground2" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#8B7E54" Offset="0"/>
            <GradientStop Color="#BDAD81" Offset="0.9"/>
        </LinearGradientBrush>


        <Style x:Key="SignInButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource SignInBackground1}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SignInBackground2}" />
                    <Setter Property="Cursor" Value="Hand"/>

                </Trigger>
            </Style.Triggers>
        </Style>
        <!--- Box Background-->
        <LinearGradientBrush x:Key="BoxBackground" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#111111" Offset="0"/>
            <GradientStop Color="#202020" Offset="0.9"/>
        </LinearGradientBrush>
        <!-- Continue as Guest Button-->
        <Style x:Key="GuestButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#8A8A8A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Cursor" Value="Hand"/>

                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>



    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/images/well.png" Stretch="Fill" Opacity="1"  />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="18.75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="371*"/>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="219*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="#313131"
              Grid.ColumnSpan="3"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Rectangle Grid.Column="11" Grid.RowSpan="1000">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#212121" Offset="0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Grid.Column="10" Grid.RowSpan="1000">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#212121" Offset="0" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>




            <Button x:Name="MinimizeButton"    Content="🗕"
                       Foreground="#D3D3D3"
                       Background="{x:Null}"
                       BorderBrush="{x:Null}"
                       Grid.Column="10"
                       VerticalAlignment="Center"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular" Width="83" Click="MinimizeButton_Click" Height="19"
                       />
            <Button x:Name="ExitProgramm"    Content="X"
                       Foreground="#D3D3D3"
                       Background="{x:Null}"
                       BorderBrush="{x:Null}"
                       Grid.Column="11"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular" Width="83" Click="ExitProgramm_Click" Height="19"
                       />


        </Grid>



        <!--  this is not a good place for text block.
          the text block is beneath the rectangle  
          so it would not be seen  -->
        <!--<TextBlock Grid.Column="1"  Text="Some Text"/>-->











        <!-- small adjustment to pic with margin-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,57,0">
            <Grid.Background>
                <!-- BackgroundImageBlightCut-->
                <ImageBrush ImageSource="/images/backgroundnew.png" Stretch="UniformToFill" ></ImageBrush>
            </Grid.Background>
            <StackPanel
                VerticalAlignment="Center"
                        Margin="55,0,0,26" Height="282">
                <StackPanel>
                    <TextBlock
                        Foreground="white"
                        FontSize="45"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Poppins"
                        Text="The Largest"></TextBlock>
                    <TextBlock
                        Margin="0,-16,0,-15"
                        Foreground="white"
                        FontSize="45"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Poppins"
                        Text="Community"></TextBlock>
                    <TextBlock
                        Foreground="white"
                        FontSize="45"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Poppins"
                        Text="Statistics DB"></TextBlock>

                    <TextBlock x:Name="UpdateStatus"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Roboto Medium"
                        Margin="0,10,0,0"
                        Foreground="#FFD8C389" FontSize="14" Text="" />



                    <TextBlock
                        Foreground="white"
                        FontSize="20"
                        FontWeight="Medium"
                        FontFamily="/projectzarina;component/fonts/#Roboto"
                        TextWrapping="Wrap"
                        Margin="0,10,50,0"
                    ><Span Foreground="#FF9F9F9F"><Run Text="Statistics collector made for the game &quot;Dead by Daylight&quot;.  Uploading end screen images allows the processor to automatically read all necessary information in order to save every perks, addons and items used into a database for further analysis."/></Span></TextBlock>
                    <TextBlock x:Name="ErrorBox" Text=""
                        Foreground="#E84225"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="fonts/#Roboto-Regular"
                        TextWrapping="Wrap"
                        Margin="0,20,0,0"
                    />

                </StackPanel>


            </StackPanel>
        </Grid>





        <Grid Grid.Column="1"
              Margin="0,1,0,0" Grid.ColumnSpan="2" Grid.Row="1">

            <StackPanel Margin="110,0,0,0">
                <TextBlock
                Margin="0,50,0,15"
                Foreground="#D8C389"
                FontSize="45"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="SIGN IN"
                HorizontalAlignment="Left" FontWeight="Bold" Height="46" Width="167"
                />
                <TextBlock
                Margin="0,0,0,0"
                Foreground="#8A8A8A"
                HorizontalAlignment="Left"
                FontSize="12"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center" Height="13" Width="127"
                ><Span Foreground="#FF8A8A8A"><Run Text="USERNAME OR E-MAIL"/></Span></TextBlock>
                <TextBox x:Name="emailorusername" Margin="0,0,0,0" 
                         Background="{StaticResource BoxBackground}"
                         Foreground="#AAA5A5"
                         BorderBrush="#4E4E4E"
                         Padding="8,3,0,0"
                         HorizontalAlignment="Left" Width="330" Height="33" FontFamily="/projectzarina;component/fonts/#Roboto" FontSize="18"
                         />



                <TextBlock
                Margin="0,20,0,0"
                Foreground="#8A8A8A"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                HorizontalAlignment="Left"
                TextAlignment="Center"
                Text="PASSWORD" Height="16" Width="65"/>
                <PasswordBox  x:Name="password" Margin="0,0,0,0"
                             Background="{StaticResource BoxBackground}"
                             Foreground="#AAA5A5"
                             Padding="8,3,0,0"
                             BorderBrush="#4E4E4E"
                             HorizontalAlignment="Left" Width="330" Height="33" FontFamily="/projectzarina;component/fonts/#Roboto" FontSize="16"
                              
                             />
                <Button Style="{StaticResource SignInButton}" IsDefault="True" Content="SIGN IN" Margin="73,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Foreground="Black" Height="40" FontWeight="Bold" Width="215" FontFamily="/projectzarina;component/fonts/#Roboto" FontSize="14"/>
                <Button Style="{StaticResource GuestButton}" Content="CONTINUE AS GUEST" Margin="73,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CONTINUEASGUEST" BorderBrush="{x:Null}" Background="{x:Null}" Height="48" Width="215" FontFamily="/projectzarina;component/fonts/#Roboto" FontSize="12"/>


            </StackPanel>

        </Grid>

    </Grid>

</Window>
