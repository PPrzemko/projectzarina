<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2B2B2B"
       
            >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/well.png" Stretch="Fill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid Background="#1A1A1A"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Test"
                       Foreground="White"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       FontWeight="Medium"
                       />
            <TextBlock Text="Test"
                       Foreground="LightGray"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       />
            <TextBlock Text="Website"
                       Foreground="LightGray"
                       Grid.Column="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       />
            <Button x:Name="ExitProgramm"    Content="X"
                       Foreground="RED"
                       Background="Gray"
                       Grid.Column="11"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular" Margin="12,4,12,3" Width="51" Click="ExitProgramm_Click"
                       />
        </Grid>
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    Margin="60">
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,20">
                <Image Width="330" Height="100"
                       Source="images/logo.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       />

            </StackPanel>


            <StackPanel>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                Text="Make"/>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                Text="every Match"
                />
                <TextBlock Text="count"
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                />
                <TextBlock Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolorcusamita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
                Foreground="white"
                FontSize="12"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextWrapping="Wrap"
                Margin="0,10,0,0"
                />

            </StackPanel>


        </StackPanel>

        <Grid Grid.Column="1"
              Grid.RowSpan="2"
              Margin="0,150,0,0">

            <StackPanel>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="Username or Email"/>
                <TextBox x:Name="emailorusername" Margin="141,0,144,0" Height="21"/>



                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="Password"/>
                <PasswordBox x:Name="password" Height="21" Margin="141,0,144,0"/>

                <Button Content="Sign In" Margin="60" VerticalAlignment="Top" Width="169" Click="Button_Click" Background="#FF93855B" Height="42" FontSize="20" FontWeight="Bold"/>



                <TextBlock Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolorcusamita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
                Foreground="white"
                FontSize="12"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextWrapping="Wrap"
                Margin="0,150,0,0"
                />

            </StackPanel>

        </Grid>

    </Grid>
</Window>
