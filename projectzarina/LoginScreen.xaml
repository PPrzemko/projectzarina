<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background.png"/>
        </Grid.Background>
        <Rectangle Fill="#1A1A1A" HorizontalAlignment="Left" Height="267" Margin="95,106,0,0" Stroke="#FF3F3F3F" VerticalAlignment="Top" Width="564" Opacity="0.8"/>
        <Button x:Name="LoginButton" Content="SIGN IN" HorizontalAlignment="Left" Margin="262,314,0,0" VerticalAlignment="Top" Width="169" Click="Button_Click" Background="#FF93855B" Height="42" FontSize="20" FontWeight="Bold"/>
        <Label Content="USERNAME OR E-MAIL" HorizontalAlignment="Left" Margin="200,149,0,0" VerticalAlignment="Top" Width="219" Foreground="#FFD8C389" FontSize="20"/>
        <TextBox x:Name="emailorusername" HorizontalAlignment="Left" Height="36" Margin="200,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" FontSize="20" Background="#FF191919" BorderBrush="#FF3F3F3F" Foreground="White">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="200,227,0,0" VerticalAlignment="Top" Width="141" Foreground="#FFD8C389" FontSize="20"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="200,262,0,0" VerticalAlignment="Top" Width="291" Height="36" Background="#FF191919" BorderBrush="#FF3F3F3F" Foreground="White">
            <PasswordBox.Effect>
                <DropShadowEffect/>
            </PasswordBox.Effect>
        </PasswordBox>

    </Grid>
</Window>
