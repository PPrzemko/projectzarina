<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2B2B2B"
            >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid Background="#1A1A1A"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Test"
                       Foreground="White"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       FontWeight="Medium"
                       />
            <TextBlock Text="Test"
                       Foreground="LightGray"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       />
            <TextBlock Text="Website"
                       Foreground="LightGray"
                       Grid.Column="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="fonts/#Roboto-Regular"
                       />
        </Grid>
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    Margin="60">
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,20">
                <Image Width="330" Height="100"
                       Source="images/logo.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       />

            </StackPanel>


            <StackPanel>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                ><Run Text="Make"/><Run Text=" ever"/><Run Text="&#x9;"/></TextBlock>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                ><Run Text="ma"/><Run Text="tc"/><Run Text="h"/></TextBlock>
                <TextBlock Text="count"
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                />
                <TextBlock Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolorcusamita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
                Foreground="white"
                FontSize="12"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextWrapping="Wrap"
                Margin="0,10,0,0"
                />

            </StackPanel>


        </StackPanel>

        <Grid Grid.Column="1"
              Grid.RowSpan="2"
              Margin="0,150,0,0">

            <StackPanel>
                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="Username or Email"/>
                <TextBox Margin="141,0,144,0" Height="21"/>



                <TextBlock
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextAlignment="Center"
                Text="Password"/>
                <PasswordBox Height="21" Margin="141,0,144,0"/>






                <TextBlock Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolorcusamita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
                Foreground="white"
                FontSize="12"
                FontWeight="Medium"
                FontFamily="fonts/#Roboto-Regular"
                TextWrapping="Wrap"
                Margin="0,150,0,0"
                />
            </StackPanel>

        </Grid>

    </Grid>
</Window>
