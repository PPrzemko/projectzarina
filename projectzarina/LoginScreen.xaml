<Window x:Class="projectzarina.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background.png"/>
        </Grid.Background>
        <Rectangle Fill="#1A1A1A" HorizontalAlignment="Left" Height="224" Margin="95,142,0,0" Stroke="Black" VerticalAlignment="Top" Width="488"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="472,317,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="email" HorizontalAlignment="Left" Margin="140,186,0,0" VerticalAlignment="Top" Width="90" Foreground="#FFD8C389"/>
        <TextBox x:Name="emailorusername" HorizontalAlignment="Left" Height="23" Margin="261,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="pw" HorizontalAlignment="Left" Margin="140,221,0,0" VerticalAlignment="Top" Width="89" Foreground="#FFD8C389"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="261,221,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
    </Grid>
</Window>
