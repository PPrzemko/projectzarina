<Window x:Class="projectzarina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectzarina"
        mc:Ignorable="d"
        Title="Zarina" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2B2B2B"
        Icon="images/well.png">
    <Window.Resources>












    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/well.png" Stretch="Fill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!--  <ColumnDefinition Width="299*"/> !-->

        </Grid.ColumnDefinitions>
        <Grid Background="#1A1A1A"
              Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Dashboard" Foreground="White" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="fonts/#Roboto-Regular" FontWeight="Medium"/>
            <Button x:Name="MinimizeButton" Content="-" Foreground="#D3D3D3" Background="#1A1A1A" BorderBrush="#1A1A1A" Grid.Column="11" VerticalAlignment="Center" FontSize="10" HorizontalAlignment="Center" FontFamily="fonts/#Roboto-Regular" Margin="12,5,12,4" Width="51" Click="MinimizeButton_Click"/>
            <Button x:Name="ExitProgramm" Content="X" Foreground="#D3D3D3" Background="#1A1A1A" BorderBrush="#1A1A1A" Grid.Column="12" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="fonts/#Roboto-Regular" Margin="27,3,7,4" Width="41" Click="ExitProgramm_Click"/>
        </Grid>

        <Button x:Name="nameassignPath" Content="Assign Path" HorizontalAlignment="Left" Margin="194,89,0,0" Grid.Row="1" VerticalAlignment="Top" Width="74" Click="assignPath" Foreground="White" Background="{x:Null}" BorderBrush="White" />
        <TextBox x:Name="TextScreenshotPath" HorizontalAlignment="Left" Height="38" Margin="331,84,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="439" Background="#1B1B1B" Foreground="White" IsEnabled="False"/>
        <Button x:Name="Button_SaveSettings" Content="SaveSettings" HorizontalAlignment="Left" Margin="694,177,0,0" Grid.Row="1" VerticalAlignment="Top" Width="76" Click="saveScreenshotPath" Foreground="White" Background="{x:Null}" BorderBrush="White"/>
        <Label x:Name="SaveMessage" Content="" HorizontalAlignment="Left" Margin="331,127,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" Width="439"/>
        <Button Content="Logout" HorizontalAlignment="Left" Margin="797,23,0,0" Grid.Row="1" VerticalAlignment="Top" Width="74" Click="logoutButton" Foreground="White" Background="{x:Null}" BorderBrush="White"/>
        <TextBox x:Name="test" HorizontalAlignment="Left" Height="189" Margin="231,219,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="572" Foreground="White" Background="{x:Null}" BorderBrush="White"/>
        <CheckBox x:Name="NotificationCheckbox" Content="Notifications" HorizontalAlignment="Left" Margin="194,133,0,0" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="91" Foreground="White"/>




    </Grid>
</Window>

